<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.ripple.DynamicRippleLinearLayoutWithFactor xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/popup_item_gap_length"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:padding="@dimen/popup_padding">

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/popup_padding"
        android:layout_weight="1"
        android:textSize="@dimen/preferences_title_text_size"
        app:appFontStyle="medium"
        app:textColorStyle="primary" />

    <app.simple.inure.decorations.toggles.CheckBox
        android:id="@+id/checkbox"
        android:layout_width="@dimen/checkbox_dimensions"
        android:layout_height="@dimen/checkbox_dimensions"
        android:layout_gravity="center_vertical" />

</app.simple.inure.decorations.ripple.DynamicRippleLinearLayoutWithFactor>