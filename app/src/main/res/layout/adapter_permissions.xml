<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.condensed.CondensedDynamicRippleConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_permissions_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/header_padding"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical">

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_permissions_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/info_text_medium"
        android:layout_marginEnd="@dimen/header_padding"
        app:appFontStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/switch_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textColorStyle="primary" />

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_permissions_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/desc_text_size"
        android:layout_marginEnd="@dimen/header_padding"
        app:appFontStyle="regular"
        app:layout_constraintEnd_toStartOf="@+id/switch_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adapter_permissions_name"
        app:textColorStyle="accent" />

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_permissions_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/desc_text_size"
        android:layout_marginEnd="@dimen/header_padding"
        app:appFontStyle="regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/switch_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adapter_permissions_status"
        app:textColorStyle="tertiary" />

    <app.simple.inure.decorations.toggles.Switch
        android:id="@+id/switch_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/header_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</app.simple.inure.decorations.condensed.CondensedDynamicRippleConstraintLayout>
