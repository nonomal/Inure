<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.ripple.DynamicRippleLinearLayoutWithFactor xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/popup_item_gap_length"
    android:orientation="vertical"
    android:padding="5dp">

    <app.simple.inure.decorations.theme.ThemeIcon
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        app:tintType="regular" />

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/extract"
        android:textSize="@dimen/desc_text_size"
        app:appFontStyle="regular"
        app:textColorStyle="primary" />

</app.simple.inure.decorations.ripple.DynamicRippleLinearLayoutWithFactor>
